<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"
    android:background="@color/background_color">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/plantImageView"
        app:riv_corner_radius="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plantNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Silver linden"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/plantImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plantScientificNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingEnd="190dp"
        app:layout_constraintStart_toEndOf="@id/plantImageView"
        app:layout_constraintTop_toBottomOf="@id/plantNameTextView" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#CCC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plantImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>